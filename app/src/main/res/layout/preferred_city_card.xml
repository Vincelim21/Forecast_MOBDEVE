<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/preferred_background"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/city_background">

        <TextView
            android:id="@+id/preferred_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:text="4&#xb0;"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/preferred_weather_condition"
            app:layout_constraintEnd_toStartOf="@id/preferred_condition_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/is_preferred"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/preferred_condition_icon"
            app:layout_constraintEnd_toEndOf="@id/preferred_condition_icon"
            android:background="@drawable/star_off"/>

        <ImageView
            android:id="@+id/preferred_condition_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/preferred_name"
            app:layout_constraintTop_toBottomOf="@id/is_preferred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/preferred_degree"
            app:srcCompat="@drawable/overcast" />

        <TextView
            android:id="@+id/preferred_weather_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_light"
            android:text="rainy"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@id/preferred_name"
            app:layout_constraintStart_toStartOf="@id/preferred_degree"
            app:layout_constraintTop_toBottomOf="@id/preferred_degree" />

        <TextView
            android:id="@+id/preferred_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="Venice"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/preferred_degree"
            app:layout_constraintTop_toBottomOf="@id/preferred_weather_condition" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>